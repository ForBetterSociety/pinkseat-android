<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hyeong.pinkseat.DeclareFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorWhite">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/linearLayout">
    <LinearLayout
        android:id="@+id/lay_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/declare_img_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/declare_icon" />

        <ImageView
            android:id="@+id/declare_img_2"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/seat_icon" />

        <ImageView
            android:id="@+id/declare_img_3"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/app_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_toEndOf="@+id/lay_r"
        android:layout_marginLeft="20dp">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ra1"
                android:layout_marginTop="7dp"
                android:layoutDirection="rtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="임산부 배려석에 비임산부가 앉았어요!"
                android:textSize="15dp"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/ra2"
                android:layout_marginTop="25dp"
                android:layoutDirection="rtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="임산부 배려석 장치에 이상이 있어요!   "
                android:textSize="15dp" />
            <RadioButton
                android:id="@+id/ra3"
                android:layout_marginTop="25dp"
                android:layoutDirection="rtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어플이 작동하지 않아요!                       "
                android:textSize="15dp" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>

    <Button
        android:id="@+id/btn_declare"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ok_btn"
        android:text="신고"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

</LinearLayout>
